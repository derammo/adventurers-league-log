<div class="row">
  <div class="col-md-offset-2 col-md-8">
    <h2>Show Purchase Log Entry</h2>
  </div>
</div>

<div class="row">
  <div class="form-group col-md-offset-2 col-md-3">
    <strong>Date Played</strong> <br>
    <%= @log_entry.date_played %>
  </div>
  <div class="form-group col-md-2">
    <strong>Downtime</strong> <br>
    <%= @log_entry.downtime_gained %>
  </div>
</div>


<% if @log_entry.notes.present? %>
  <div class="row">
    <div class="form-group col-md-offset-2 col-md-8">
      <strong>Notes</strong> <br>
      <%= @log_entry.notes %>
    </div>
  </div>
<% end %>



<div class="row">
  <div class="col-md-2"></div>

  <div class="form-group col-sm-8">
    <strong>Purchased Magic Item</strong>
    <div class="well">
      <%= render partial: 'magic_items/show', locals: { magic_item: @log_entry.purchased_magic_item }  unless @log_entry.purchased_magic_item.nil? %>
    </div>
  </div>
</div>
