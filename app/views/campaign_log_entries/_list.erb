<div class="row">
  <div class='col-xs-12 col-sm-7 col-md-8'>
    <%= paginate @log_entries %>
  </div>
</div>

<label class='css3-checkboxes'>
  <%= check_box_tag :old_format, "1", @campaign.campaign_style_old? %>
  <span class="link-like">Old Format</span>
</label>

<div class="new_format">
  <%= render partial: 'campaign_log_entries/table' %>
</div>

<div class="old_format">
  <%= render partial: 'campaign_log_entries/old_table' %>
</div>

<script>
  $('#old_format').change( function(){
    if($(this).is(':checked')) {
      $(".old_format").removeClass('hide');
      $(".new_format").addClass('hide');
    } else {
      $(".new_format").removeClass('hide');
      $(".old_format").addClass('hide');
    }
  });

  $('#old_format').change();
</script>
