<div class="row">
  <div class="col-md-offset-2 col-md-8">
    <h2>Show DM Log Entry</h2>
  </div>
</div>

<div class="row">
  <div class="form-group col-md-offset-2 col-md-4">
    <strong>Adventure Title</strong> <br>
    <%= @log_entry.adventure_title %>
  </div>
 <div class="form-group col-md-2">
    <strong>Session</strong> <br>
    <%= @log_entry.session_num %>
  </div>

  <div class="form-group col-md-2">
    <strong>Date DMed</strong> <br>
    <%= format_date @log_entry.date_dmed %>
  </div>
</div>

<div class="row">
  <div class="form-group col-md-offset-2 col-md-2">
    <strong>Session Length (Hours)</strong> <br>
    <%= @log_entry.session_length_hours %>
  </div>
  <div class="form-group col-md-2">
    <strong>Avg Party Level</strong> <br>
    <%= @log_entry.player_level %>
  </div>
  <div class="form-group col-md-2">
    <strong>Location DMed</strong> <br>
    <%= @log_entry.location_played %>
  </div>
</div>

<div class="row">
  <div class="form-group col-md-offset-2 col-md-2">
    <strong>XP Gained</strong> <br>
    <%= @log_entry.xp_gained %>
  </div>
  <div class="form-group col-md-2">
    <strong>GP +/-</strong> <br>
    <%= humanize_decimal @log_entry.gp_gained %>
  </div>
  <div class="form-group col-md-2">
    <strong>Downtime +/-</strong> <br>
    <%= @log_entry.downtime_gained %>
  </div>
  <div class="form-group col-md-1">
    <strong>Renown</strong> <br>
    <%= @log_entry.renown_gained %>
  </div>
  <div class="form-group col-md-1">
    <strong>Missions</strong> <br>
    <%= @log_entry.num_secret_missions %>
  </div>
</div>

<div class="row">
  <div class="form-group col-md-offset-2 col-md-2">
    <strong>Date Assigned</strong> <br>
    <%= format_date @log_entry.date_played %>
  </div>
  <div class="form-group col-md-4">
    <strong>Character to Apply Rewards</strong> <br>
    <%= @log_entry.character.name if @log_entry.character %>
  </div>
</div>

<div class="row">
  <div class="form-group col-md-offset-2 col-md-8">
    <strong>Notes</strong> <br>
    <%= @log_entry.notes %>
  </div>
</div>

<%= render partial: 'magic_items/list' unless @magic_items.empty? %>
