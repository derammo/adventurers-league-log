<style type="text/css">
  nav { display: none }
  .navbar-text { display: none }

  body{ padding-top: 0px; }

  .adventurers-league-print-logo{
    display: list-item;
    list-style-image: url(<%= asset_path 'DnD_ADVL.png' %>);
    list-style-position: inside;
    letter-spacing: -1000em;
    font-size: 1px;
    color: #fff;
  }

  .page {
    page-break-after: always;
    page-break-inside: avoid;
  }
</style>

<% @index = 0 %>
<% @sheet_num = 1 %>

<% if(@log_entries.length == 0) %>
  <%= render "print_header" %>
  <%= render 'blank_print_log_entry' %>
<% end %>

<% @log_entries.each_with_index do |log_entry, index| %>
  <% @index = index %>
  <% if(index == 0 || index % 3 == 0) %>
    <div class='page'>
    <%= render "print_header" %>
    <% @sheet_num = @sheet_num + 1 %>
  <% end %>

  <div class="row print-log-entry-box">
    <div class="row">
      <% if log_entry.is_character_log_entry? || log_entry.is_dm_log_entry? || log_entry.is_campaign_log_entry? %>
        <div class="col-xs-4">
          <%= display_attribute_for_print "Adventure Name",  log_entry.adventure_title %>
        </div>
        <div class="col-xs-2">
          <%= display_attribute_for_print "Session #",  log_entry.session_num %>
        </div>
      <% elsif log_entry.is_trade_log_entry? || log_entry.is_purchase_log_entry? %>
        <div class="col-xs-6">
        </div>
      <% end %>

      <div class="col-xs-2">
        <%= display_attribute_for_print "Date",  (log_entry.date_played ? log_entry.date_played.strftime("%F %H:%M") : '') %>
      </div>
      <% if log_entry.is_character_log_entry? || log_entry.is_campaign_log_entry? %>
        <div class="col-xs-4">
          <%= display_attribute_for_print "DM Name and DCI #", make_dm_and_dci_string(log_entry.dm_name, log_entry.dm_dci_number) %>
        </div>
      <% end %>

      <% if log_entry.is_dm_log_entry? %>
        <div class="col-xs-4">
          <h4>*** DM ENTRY ***</h4>
        </div>
      <% end %>

      <% if log_entry.is_trade_log_entry? %>
        <div class="col-xs-4">
          <h4> *** TRADE ENTRY ***</h4>
        </div>
      <% end %>

      <% if log_entry.is_purchase_log_entry? %>
        <div class="col-xs-4">
          <h4> *** PURCHASE ENTRY ***</h4>
        </div>
      <% end %>
    </div>

    <% if log_entry.old_format %>
      <div class="row">
        <div class="col-xs-2">
          <%= display_attribute_for_print "Starting XP",  @total_xp %>
        </div>
        <div class="col-xs-2">
          <%= display_attribute_for_print "Starting Gold",  humanize_decimal(@total_gp) %>
        </div>
        <div class="col-xs-2">
          <%= display_attribute_for_print "Starting Downtime",  @total_downtime %>
        </div>
        <div class="col-xs-2">
          <%= display_attribute_for_print "Starting Renown", @total_renown %>
        </div>
        <div class="col-xs-2">
          <%= display_attribute_for_print "Starting # of Magic Items", @total_magic_items %>
        </div>
      </div>
    <% else %>
      <div class="row">
        <div class="col-xs-2">
          <%= display_attribute_for_print "Starting ACP",  @total_acp %>
        </div>
        <div class="col-xs-2">
          <%= display_attribute_for_print "Starting TCP", "#{@total_tcp1}/#{@total_tcp2}/#{@total_tcp3}/#{@total_tcp4}" %>
        </div>
        <div class="col-xs-2">
          <%= display_attribute_for_print "Starting Downtime",  @total_downtime %>
        </div>
        <div class="col-xs-2">
          <%= display_attribute_for_print "Starting Renown", @total_renown %>
        </div>
        <div class="col-xs-2">
          <%= display_attribute_for_print "Starting Gold",  humanize_decimal(@total_gp) %>
        </div>
      </div>
    <% end %>

    <% if log_entry.old_format %>
      <div class="row main-row">
        <div class="col-xs-2">
          <%= display_attribute_for_print "XP Earned",  log_entry.xp_gained %>
        </div>
        <div class="col-xs-2">
          <%= display_attribute_for_print "Gold +/-",  humanize_decimal(log_entry.gp_gained) %>
        </div>
        <div class="col-xs-2">
          <%= display_attribute_for_print "Downtime +/-",  log_entry.downtime_gained %>
        </div>
        <div class="col-xs-2">
          <%= display_attribute_for_print "Renown Earned", log_entry.renown_gained %>
        </div>
        <div class="col-xs-2">
          <%= display_attribute_for_print "Magic Items +/-", log_entry.num_magic_items_gained %>
        </div>
        <div class="col-xs-2">
          <%= display_attribute_for_print "Magic Item Gained", log_entry.magic_items_list(@character) %>
        </div>
      </div>
    <% else %>
      <div class="row main-row">
        <div class="col-xs-2">
          <%= display_attribute_for_print "ACP Earned",  log_entry.advancement_checkpoints %>
        </div>
        <div class="col-xs-2">
          <%= display_attribute_for_print "TCP Earned", treasure_checkpoint_string(log_entry)  %>
        </div>
        <div class="col-xs-2">
          <%= display_attribute_for_print "Downtime +/-",  log_entry.downtime_gained %>
        </div>
        <div class="col-xs-2">
          <%= display_attribute_for_print "Renown Earned", log_entry.renown_gained %>
        </div>
        <div class="col-xs-2">
          <%= display_attribute_for_print "Gold +/-",  humanize_decimal(log_entry.gp_gained) %>
        </div>
        <% if log_entry.is_purchase_log_entry? %>
          <div class="col-xs-2">
            <%= display_attribute_for_print "Magic Item Purchased", log_entry.magic_items_list(@character) %>
          </div>
        <% else %>
          <div class="col-xs-2">
            <%= display_attribute_for_print "Magic Item Unlocked", log_entry.magic_items_list(@character, show_purchased: true) %>
          </div>
        <% end %>
      </div>
    <% end %>

    <% @total_xp          = @total_xp       + (log_entry.xp_gained || 0) %>
    <% @total_gp          = @total_gp       + (log_entry.gp_gained || 0) %>
    <% @total_downtime    = @total_downtime + (log_entry.downtime_gained || 0) %>
    <% @total_renown      = @total_renown   + (log_entry.renown_gained || 0) %>
    <% @total_magic_items = @total_magic_items + (log_entry.num_magic_items_gained || 0) %>

    <% @total_acp         = @total_acp      + (log_entry.advancement_checkpoints || 0) %>
    <% @total_tcp1        = @total_tcp1     + (calc_tcp_from_entry(log_entry, tier: 1) || 0) %>
    <% @total_tcp2        = @total_tcp2     + (calc_tcp_from_entry(log_entry, tier: 2) || 0) %>
    <% @total_tcp3        = @total_tcp3     + (calc_tcp_from_entry(log_entry, tier: 3) || 0) %>
    <% @total_tcp4        = @total_tcp4     + (calc_tcp_from_entry(log_entry, tier: 4) || 0) %>

    <% if log_entry.old_format %>
      <div class="row">
        <div class="col-xs-2">
          <%= display_attribute_for_print "XP Total",  @total_xp %>
        </div>
        <div class="col-xs-2">
          <%= display_attribute_for_print "Gold Total",  humanize_decimal(@total_gp) %>
        </div>
        <div class="col-xs-2">
          <%= display_attribute_for_print "Downtime Total",  @total_downtime %>
        </div>
        <div class="col-xs-2">
          <%= display_attribute_for_print "Renown Total", @total_renown %>
        </div>
        <div class="col-xs-2">
          <%= display_attribute_for_print "Magic Items Total", @total_magic_items %>
        </div>
      </div>
    <% else %>
      <div class="row">
        <div class="col-xs-2">
          <%= display_attribute_for_print "ACP Total",  @total_acp %>
        </div>
        <div class="col-xs-2">
          <%= display_attribute_for_print "TCP Total", "#{@total_tcp1}/#{@total_tcp2}/#{@total_tcp3}/#{@total_tcp4}" %>
        </div>
        <div class="col-xs-2">
          <%= display_attribute_for_print "Downtime Total",  @total_downtime %>
        </div>
        <div class="col-xs-2">
          <%= display_attribute_for_print "Renown Total", @total_renown %>
        </div>
        <div class="col-xs-2">
          <%= display_attribute_for_print "Gold Total",  humanize_decimal(@total_gp) %>
        </div>
      </div>
    <% end %>

    <div class="row">
      <div class="col-xs-12">
          <label>Adventure Notes / Downtime Activites</label>
          <p class='print-notes'><%= strip_markdown(log_entry.notes) %></p>
      </div>
    </div>
  </div>

  <% if((index + 1) % 3 == 0) %>
    </div>
  <% end %>
<% end %>

<% while((@index + 1) % 3 != 0) %>
  <% @index = @index + 1 %>
  <%= render 'log_entries/blank_print_character_log_entry' %>
<% end %>

</div>
